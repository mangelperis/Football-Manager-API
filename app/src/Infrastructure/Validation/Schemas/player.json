{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Player",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "position": {
      "type": "string",
      "enum": [
        "AM",
        "SW",
        "CB",
        "CF",
        "LB",
        "RB",
        "FB",
        "LWB",
        "RWB",
        "D",
        "DM",
        "CM",
        "F",
        "GK",
        "IF",
        "OL",
        "OR"
      ]
    },
    "email": {
      "type": "string",
      "format": "email"
    }
  },
  "required": [
    "name",
    "position",
    "email"
  ],
  "additionalProperties": false
}